<%- include('partials/header') %>

<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Art Shop</h1>
      <p class="lead text-muted">Spread the creativity. Shop for original photos.</p>
    </div>
  </div>
</section>

<div class="container">
  <div class="row row-cols-3 justify-content-md-center">
    <% images.forEach(function(image){ %>
      <div class="col-md-auto">
        <div class="card shadow mb-3" style="width: 20rem; height: auto;">
          <img src="data:<%= image.contentType %>;base64,<%= image.imageBase64 %>" class="card-img-top img-fluid" alt="image">
          <div class="card-body">
            <h5 class="card-title">Photo title</h5>
            <p class="card-text">Photo description</p>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
              <button type="button" class="btn btn-sm btn-outline-secondary">Buy</button>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
